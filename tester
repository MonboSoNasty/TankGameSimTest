---------------------------------------------------------------------
--// OP AutoSkills Integration
---------------------------------------------------------------------
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local SkillUpgrade = ReplicatedStorage:WaitForChild("Skills"):WaitForChild("Upgrade")

local skillList = {
    "Bullet Penetration",
    "Bullet Damage",
    "Bullet Speed",
    "Body Damage",
    "Health Regeneration",
    "Max Health",
    "Shield",
    "Reload"
}

local counters, running, fireAmounts = {}, {}, {}
for _, skill in ipairs(skillList) do
    counters[skill] = 0
    running[skill] = false
    fireAmounts[skill] = 1
end

local SkillSection = Tabs.LockedTab1:Section({
    Title = "⚙️ OP Auto Skill Control",
    TextSize = 20
})

for _, skill in ipairs(skillList) do
    SkillSection:Divider({ Title = "⠀" })
    local SkillToggle = SkillSection:Toggle({
        Title = skill,
        Desc = "Auto-upgrade " .. skill,
        Value = false,
        Callback = function(state)
            running[skill] = state
            if state then
                task.spawn(function()
                    for _ = 1, fireAmounts[skill] do
                        if not running[skill] then break end
                        SkillUpgrade:FireServer(skill)
                        counters[skill] += 1
                        task.wait()
                    end
                    running[skill] = false
                    SkillToggle:Set(false)
                    WindUI:Notify({
                        Title = "AutoSkills",
                        Content = skill .. " upgrades finished!",
                        Duration = 2
                    })
                end)
            end
        end
    })

    local InputBox = SkillSection:Input({
        Title = "Fire Count for " .. skill,
        Value = tostring(fireAmounts[skill]),
        Placeholder = "Enter amount (e.g. 5)",
        Callback = function(text)
            local val = tonumber(text)
            if val and val > 0 then
                fireAmounts[skill] = val
            else
                WindUI:Notify({
                    Title = "Invalid Input",
                    Content = "Please enter a valid number above 0.",
                    Duration = 2
                })
            end
        end
    })

    local CounterLabel = SkillSection:Paragraph({
        Title = "Total Fired: " .. counters[skill],
        Desc = "",
        Color = Color3.fromHex("#30ff6a")
    })

    task.spawn(function()
        while task.wait(1) do
            CounterLabel:Set("Total Fired: " .. counters[skill])
        end
    end)
end

